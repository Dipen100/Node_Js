<div class="container mt-5 p-5" style="border:6px ridge lightblue">
    {{#if error_message}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>{{error_message}}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <center>
        <h2>Create New Post</h2>
    </center>
     <form action="/createPost" method="post" enctype="multipart/form-data">
        {{!-- Email --}}
            <div class="form-group p-2">
                <label><b>Title:</b></label>
                <input type="text" class="form-control myinput" name="title">
            </div>

            <div class="form-group p-2">
                <label><b>Description:</b></label>
                <textarea name="description" type="text" class="form-control"style="height:200px;"></textarea>
            </div>

            <div class="form-group p-2">
                <label><b>Image:</b></label>
                <input type="file" class="form-control myinput" name="image">
            </div>
        
            <div class="form-group p-2">
                <label><b>Author:</b></label>
                <input type="text" class="form-control myinput" name="author">
            </div>
            <br>
           <center><button class="btn btn-success mt-1">
                    <a href="/blog" style="text-decoration: none; color:white">Go Back</a>
                </button>
                <button class="btn btn-primary mt-1" type="submit">Save</button>
            </center>


        </form>
</div>